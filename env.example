# Configuration Environnement pour GLSL Discord Bot
# Copiez ce fichier vers .env et remplissez vos valeurs

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# Configuration WebGL
WEBGL_CANVAS_WIDTH=800
WEBGL_CANVAS_HEIGHT=600
WEBGL_FRAME_RATE=30
WEBGL_DURATION=3

# Configuration Base de Données
DATABASE_PATH=./data/shaders.db

# Configuration Puppeteer
PUPPETEER_TIMEOUT=30000
PUPPETEER_HEADLESS=true

# Configuration Sécurité
MAX_SHADER_LENGTH=10000
MAX_COMPILATION_TIME=30000

# Configuration Logs
LOG_LEVEL=info
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m
